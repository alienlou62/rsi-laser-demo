<Window
    x:Class="RapidLaser.Views.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:RapidLaser.Views"
    xmlns:vm="using:RapidLaser.ViewModels"
    Title="RapidLaser"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="Transparent"
    CanResize="True"
    ExtendClientAreaChromeHints="NoChrome"
    ExtendClientAreaToDecorationsHint="True"
    Icon="/Assets/avalonia-logo.ico"
    SystemDecorations="None"
    mc:Ignorable="d">

    <!--  Simple borderless window with corner radius  -->
    <Border Background="{StaticResource DarkBackgroundColor}" CornerRadius="{StaticResource StandardCornerRadius}">
        <views:MainView />
    </Border>
</Window>
